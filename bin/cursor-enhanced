#!/bin/bash
# Get the directory where the script is located (resolving symlinks)
SOURCE="${BASH_SOURCE[0]}"
while [ -h "$SOURCE" ]; do # resolve $SOURCE until the file is no longer a symlink
  DIR="$( cd -P "$( dirname "$SOURCE" )" >/dev/null 2>&1 && pwd )"
  SOURCE="$(readlink "$SOURCE")"
  [[ $SOURCE != /* ]] && SOURCE="$DIR/$SOURCE" # if $SOURCE was a relative symlink, we need to resolve it relative to the path where the symlink file was located
done
DIR="$( cd -P "$( dirname "$SOURCE" )" >/dev/null 2>&1 && pwd )"

# Use package entrypoint for local development
PROJECT_ROOT="$DIR/.."
PYTHONPATH="$PROJECT_ROOT:${PYTHONPATH}"
export PYTHONPATH

# Run from project root so imports (main, reach_schedules) resolve when cron runs from another cwd
cd "$PROJECT_ROOT" && python3 -m cursor_enhanced "$@"
